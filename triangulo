#include<stdio.h>
int main(){
    int a, i, j;
    printf("Dame un numero");
    scanf("%d", &a);
    for ( i = 1; i <=a; i++){
        for ( j = 1; j <=i; j++){
            printf("*");  
        }
        printf("\n");
    }
    printf("\n \n");
    for ( i = 0; i<=a; i++){
        for ( j=i; j < a; j++){
            printf("*");  
        }
        printf("\n");
    }
    
    
}
